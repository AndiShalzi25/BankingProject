@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Banking Project - Login</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- FontAwesome JS-->
    <script defer src="~/plugins/fontawesome/js/all.min.js"></script>

    <!-- App CSS -->
    <link id="theme-style" rel="stylesheet" href="~/css/portal.css">

    <!-- Bootstrap JS for modals -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .logo {
            width: 60px; /* Adjust the width as needed */
            height: 60px; /* Adjust the height as needed */
            display: block;
            margin: 0 auto;
        }
        .auth-background-holder {
    background-image: url('/images/background-1.jpg');
    background-size: cover;
    background-position: center;
}

    </style>
</head>

<body class="app app-signup p-0">
    <div class="row g-0 app-auth-wrapper">
        <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
            <div class="d-flex flex-column align-content-end">
                <div class="app-auth-body mx-auto">
                    <div class="app-auth-branding mb-4">
                        <a class="app-logo" href="/">
                                <img src="~/images/app-logo.svg" alt="App Logo" class="logo">
                            
                        </a>
                    </div>
                    <h2 class="auth-heading text-center mb-4">Welcome</h2>

                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <div class="text-center">
                        <!-- Button to trigger User Login Modal -->
                         <!-- Link to navigate to User Login Page -->
                        <a asp-controller="Login" asp-action="UserLogin" class="btn app-btn-primary w-100 theme-btn mx-auto">
                            Log in as User
                        </a>
                        <br><br>
                        <!-- Button to trigger Admin Login Modal -->
                        <button type="button" class="btn app-btn-primary w-100 theme-btn mx-auto" data-bs-toggle="modal" data-bs-target="#adminLoginModal">
                            Log in as Admin
                        </button>
                    </div>

                    <!-- User Login Modal -->
                    <div class="modal fade" id="userLoginModal" tabindex="-1" aria-labelledby="userLoginModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="userLoginModalLabel">User Login</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form asp-action="UserLogin" method="post">
                                        <div class="mb-3">
                                            <label for="debitCardNumber" class="form-label">Debit Card Number <span style="color: red;">*</span></label>
                                            <input type="text" class="form-control" name="debitCardNumber" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="userPin" class="form-label">PIN <span style="color: red;">*</span></label>
                                            <input type="password" class="form-control" name="pin" required>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn app-btn-primary">Login</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Admin Login Modal -->
                    <div class="modal fade" id="adminLoginModal" tabindex="-1" aria-labelledby="adminLoginModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="adminLoginModalLabel">Admin Login</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form asp-action="AdminLogin" method="post">
                                        <div class="mb-3">
                                            <label for="adminEmail" class="form-label">Email<span style="color: red;">*</span></label>
                                            <input type="email" class="form-control" name="email" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="adminPassword" class="form-label">Password<span style="color: red;">*</span></label>
                                            <input type="password" class="form-control" name="password" required>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn app-btn-primary" asp-controller="Login" asp-action="AdminLogin">Login</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!--//auth-body-->
            </div><!--//flex-column-->
        </div><!--//auth-main-col-->
        <div class="col-12 col-md-5 col-lg-6 h-100 auth-background-col">
            <div class="auth-background-holder"></div>
            <div class="auth-background-mask"></div>
            <div class="auth-background-overlay p-3 p-lg-5">
                <div class="d-flex flex-column align-content-end h-100">
                    <div class="h-100"></div>
                </div>
            </div><!--//auth-background-overlay-->
        </div><!--//auth-background-col-->
    </div><!--//row-->
</body>
</html>
