@{
	var user = ViewBag.User as BankingProject.Models.User;
	var deposits = ViewBag.Deposits as List<BankingProject.Models.Deposit>;
}

<div class="row g-4 mb-4">
	<div class="col-6 col-lg-3">
		<div class="app-card app-card-stat shadow-sm h-100">
			<div class="app-card-body p-3 p-lg-4">
				<h4 class="stats-type mb-1">Car ticket</h4>
				<div class="stats-figure">
					<div class="app-icon-holder">
						<i class="fa-solid fa-car-side" style="width:30px; height:30px;"></i>
					</div>
				</div>
			</div>
			<a class="app-card-link-mask" href="#"></a>
		</div>
	</div>
	<div class="col-6 col-lg-3">
		<div class="app-card app-card-stat shadow-sm h-100">
			<div class="app-card-body p-3 p-lg-4">
				<h4 class="stats-type mb-1">Mobile payments</h4>
				<div class="stats-figure">
					<div class="app-icon-holder">
						<i class="fa-solid fa-phone" style="width:23px; height:23px;"></i>
					</div>
				</div>
			</div>
			<a class="app-card-link-mask" data-bs-toggle="modal" data-bs-target="#mobile-payment-modal"></a>
		</div>
	</div>
	<div class="col-6 col-lg-3">
		<div class="app-card app-card-stat shadow-sm h-100">
			<div class="app-card-body p-3 p-lg-4">
				<h4 class="stats-type mb-1">Projects</h4>
				<div class="stats-figure">23</div>
				<div class="stats-meta">
					Open
				</div>
			</div>
			<a class="app-card-link-mask" href="#"></a>
		</div>
	</div>
	<div class="col-6 col-lg-3">
		<div class="app-card app-card-stat shadow-sm h-100">
			<div class="app-card-body p-3 p-lg-4">
				<h4 class="stats-type mb-1">Invoices</h4>
				<div class="stats-figure">6</div>
				<div class="stats-meta">New</div>
			</div>
			<a class="app-card-link-mask" href="#"></a>
		</div>
	</div>
</div>

<div class="modal fade" id="mobile-payment-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg modal-xlg" role="document">
		<form method="post">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Create new Mobile Payment</h5>
				</div>
				<div class="modal-body">
					<div class="row mt-4">
						<div class="col-12 col-lg-6">
							<label>Name <span class="text-danger">*</span></label>
							<input class="form-control" autocomplete="off" required />
						</div>
						<div class="col-12 col-lg-6">
							<label>Amount <span class="text-danger">*</span></label>
							<input type="number" class="form-control" autocomplete="off" required />
						</div>
					</div>
					<div class="row mt-4">
						<div class="col-12 col-lg-6">
							<label>Phone Number <span class="text-danger">*</span></label>
							<input type="text" class="form-control" autocomplete="off" required/>
						</div>
					</div>
					<div class="row mt-4">
						<div class="col-12- col-lg-6">
							<label>Deposit <span class="text-danger">*</span></label>
							<select class="form-control" required>
								<option value="null" selected disabled>-Select-</option>
								@foreach (var deposit in deposits)
								{
									<option value="@deposit.Id">@deposit.Name</option>
								}
							</select>
						</div>
					</div>
					<div class="row mt-4">
						<div class="col-12 col-lg-12">
							<label>Description <span class="text-danger">*</span></label>
							<textarea class="form-control"></textarea>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn app-btn-secondary" data-bs-dismiss="modal">
						<i class="fa-solid fa-x"></i>
						Close
					</button>
					<button type="submit" class="btn btn-primary" style="color:white;">
						<i class="fa-solid fa-pencil"></i>
						Save
					</button>
				</div>
			</div>
		</form>
	</div>
</div>